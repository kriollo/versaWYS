{
    "name": "versawys-php",
    "version": "1.0.0",
    "description": "versaWYS-PHP es un framework PHP versátil, simple, ligero, rápido y fácil de usar, diseñado para desarrolladores que buscan eficiencia y flexibilidad en sus proyectos web. Ofrece un enfoque moderno para la gestión de rutas, tanto para aplicaciones web tradicionales como para APIs REST, integrando poderosas herramientas como RedBean para ORM y Twig para la gestión de plantillas.",
    "scripts": {
        "watch": "node ./versaCompileJS/watch.js",
        "dev": "node --watch ./versaCompileJS/watch.js",
        "dashboard": "tailwindcss --max-old-space-size=800 -i ./src/dashboard/css/dashboard.css -o ./public/dashboard/css/dashboard.css --watch --minify",
        "web": "tailwindcss -i ./src/web/css/web.css -o ./public/web/css/web.css --watch --minify"
    },
    "type": "module",
    "author": "Jorge Jara H.(jjara@wys.cl)",
    "license": "MIT",
    "dependencies": {
        "chalk": "5.3.0",
        "glob": "^11.0.0",
        "glob-promise": "^6.0.7",
        "gulp": "5.0.0",
        "terser": "5.31.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@html-eslint/eslint-plugin": "^0.26.0",
        "@html-eslint/parser": "^0.26.0",
        "@prettier/plugin-php": "^0.22.2",
        "@stylistic/eslint-plugin-js": "^2.6.4",
        "@types/bootstrap": "^5.2.10",
        "@types/datatables.net": "^1.12.0",
        "@types/jquery": "^3.5.30",
        "@types/node": "^22.4.0",
        "datatables.net": "^2.1.4",
        "datatables.net-buttons": "^3.1.1",
        "datatables.net-dt": "^2.1.4",
        "datatables.net-responsive": "^3.0.2",
        "eslint": "^9.9.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-html": "^8.1.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.27.0",
        "globals": "^15.9.0",
        "jquery": "^3.7.1",
        "prettier": "3.3.3",
        "semistandard": "^17.0.0",
        "standard": "^17.1.0",
        "tailwindcss": "3.4.10"
    }
}
