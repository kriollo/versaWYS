{
    "compilerOptions": {
        "noUncheckedIndexedAccess": true,
        "moduleDetection": "auto",
        "allowJs": true,
        "checkJs": true,
        "module": "esnext",
        "target": "ES6",
        "lib": [
            "es2020",
            "es2015",
            "es2019",
            "dom",
            "scripthost",
            "dom.iterable",
            "ES5",
            "ES6",
            "esnext"
        ],
        "outDir": "./public/",
        "rootDir": ".",
        "paths": {
            "@/*": ["./public/*"]
        },
        "typeRoots": ["/node_modules/", "./src/dashboards/**/*"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "exclude": ["./public/**/*"],
    "include": ["./src/**/*"],
    "typeAcquisition": {
        "enable": true,
        "include": ["vue", "pinia", "code-tag", "sweetalert2", "SweetAlertIcon"]
    }
}
