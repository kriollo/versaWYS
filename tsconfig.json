{
    "compilerOptions": {
        "noUncheckedIndexedAccess": true,
        "moduleDetection": "auto",
        "allowJs": true,
        "checkJs": true,
        "module": "ESNext",
        "target": "ESNext",
        "lib": ["es2022", "dom", "dom.iterable"],
        "outDir": "./public/",
        "sourceRoot": "./src/",
        "sourceMap": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "P@/*": ["public/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/dashboard/js/types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "vueCompilerOptions": {
        "target": 3.5
    },
    "exclude": ["./public/**/*"],
    "include": ["src/**/*"],
    "typeAcquisition": {
        "enable": true,
        "include": ["vue"]
    },
    "versaCompile": {
        "proxyConfig": {
            "proxyUrl": "http://localhost:8000"
        }
    }
}
